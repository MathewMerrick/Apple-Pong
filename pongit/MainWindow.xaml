<Window x:Class="pongit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pongit"
        mc:Ignorable="d"
        Title="PongIt" Height="900" Width="1300" ResizeMode="NoResize" Background="#FF607D8B">
    <Canvas Name="MainCanvas"  Height ="700" Width ="1100" VerticalAlignment="Top" 
            HorizontalAlignment="Center"
            Background="#FF154150">
        <!--Ball and Paddles -->
        <Rectangle Name="LeftPaddle" Canvas.Left ="0" Canvas.Bottom ="{Binding yPos}"  Fill="#FFFFFF" Height="140" Width="50"  VerticalAlignment="Center"></Rectangle>
        <Rectangle Name="RightPaddle" Canvas.Right ="0" Canvas.Bottom ="{Binding yPos}" Fill="#FFFFFF" Height="140" Width="50"  VerticalAlignment="Center"></Rectangle>
        <Ellipse Name="Ball" Canvas.Right="{Binding xPos}" Canvas.Bottom="{Binding yPos}" Fill="Gray" Height="50" Stroke="Gray"  Width="50" />

        <!-- Score -->
        <Label Name="LeftScore" Canvas.Left="300" Canvas.Bottom="-100" Content="{Binding LeftScore}" Height="100" Width="100" ></Label>
        <Label Name="RightScore" Canvas.Right="300" Canvas.Bottom="-100" Content="{Binding RightScore}" Height="100" Width="100"></Label>

    </Canvas>
</Window>
